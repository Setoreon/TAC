@using accounts.tac.local
@using accounts.tac.local.Services
@using accounts.tac.local.Extensions.SitecoreExtensions
@using Templates = accounts.tac.local.Templates
@model accounts.tac.local.Models.LoginInfo
<div class="login-body">
    @Html.ValidationMessage("invalidCredentials", new {@class = "alert alert-danger"}, "div")
    <div class="form-group @Html.ValidationErrorFor(x => x.UserName, "has-error")">
        @Html.LabelFor(x => x.UserName, new
        {
            @class = "control-label"
        })
        @Html.TextBoxFor(x => x.UserName, new
        {
            @class = "form-control",
            id = "popupLoginEmail",
            placeholder = "Enter your username"
        })
        @Html.ValidationMessageFor(x => x.UserName, "", new
        {
            @class = "help-block"
        }, "p")
    </div>
    <div class="form-group @Html.ValidationErrorFor(x => x.Password, "has-error")">
        @Html.LabelFor(x => x.Password, new
        {
            @class = "control-label"
        })
        @Html.PasswordFor(x => x.Password, new
        {
            @class = "form-control",
            id = "popupLoginPassword",
            placeholder = "Enter your password"
        })
        @Html.ValidationMessageFor(x => x.Password, "", new
        {
            @class = "help-block"
        }, "p")
    </div>
    <button type="button" class="btn btn-block btn-primary" onclick="login('loginModal')">Login</button>
    <a class="btn btn-block btn-default" href="@AccountsSettingsService.Instance.GetPageLinkOrDefault(Sitecore.Context.Item, Templates.AccountsSettings.Fields.ForgotPasswordPage)">Forgot your password?</a>
    <a class="btn btn-block btn-default" href="@AccountsSettingsService.Instance.GetPageLinkOrDefault(Sitecore.Context.Item, Templates.AccountsSettings.Fields.RegisterPage)">Register</a>
</div>